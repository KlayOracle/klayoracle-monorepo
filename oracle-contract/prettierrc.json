{
    "overrides": [
        {
            "files": "*.js",
            "options": {
                "tabWidth": 4,
                "trailingComma": "none",
                "semi": true,
                "singleQuote": true
            }
        },
        {
            "files": "*.json",
            "options": {
                "tabWidth": 4,
                "trailingComma": "none",
                "semi": true,
                "singleQuote": true
            }
        },
        {
            "files": "*.sol",
            "options": {
                "printWidth": 80,
                "tabWidth": 4,
                "useTabs": false,
                "singleQuote": false,
                "bracketSpacing": false
            }
        }
    ]
}
